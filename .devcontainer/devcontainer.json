{
  "name": "Spock Template Development Environment",
  "image": "mcr.microsoft.com/devcontainers/java:1-21",
  "customizations": {
    "vscode": {
      "settings": {
        "gradle.nestedProjects": true,
        "groovy.classpath": [
          "/workspaces/SpockTemplate/build/libs"
        ]
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "marlon407.code-groovy",
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "ms-azuretools.vscode-docker",
        "ritwickdey.liveserver"
      ]
    }
  },
  "postCreateCommand": "chmod +x gradlew && ./gradlew --version && echo '\nâœ… Environment ready! Run ./gradlew test to execute Spock tests.'",
  "postStartCommand": "echo 'Welcome to Spock Template Development Environment!'",
  "postAttachCommand": "cat .devcontainer/welcome.txt",
  "remoteUser": "vscode",
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "16gb"
  }
}
